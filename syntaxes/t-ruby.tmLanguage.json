{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "T-Ruby",
  "scopeName": "source.t-ruby",
  "fileTypes": ["trb", "d.trb"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#type-alias" },
    { "include": "#interface" },
    { "include": "#function-definition" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#symbols" },
    { "include": "#variables" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.t-ruby",
          "match": "#.*$"
        },
        {
          "name": "comment.block.documentation.t-ruby",
          "begin": "=begin",
          "end": "=end"
        }
      ]
    },
    "type-alias": {
      "patterns": [
        {
          "name": "meta.type-alias.t-ruby",
          "match": "^\\s*(type)\\s+([A-Z]\\w*)\\s*(=)\\s*(.+)$",
          "captures": {
            "1": { "name": "keyword.declaration.type.t-ruby" },
            "2": { "name": "entity.name.type.alias.t-ruby" },
            "3": { "name": "keyword.operator.assignment.t-ruby" },
            "4": { "patterns": [{ "include": "#type-expression" }] }
          }
        }
      ]
    },
    "interface": {
      "patterns": [
        {
          "name": "meta.interface.t-ruby",
          "begin": "^\\s*(interface)\\s+([A-Z]\\w*)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.interface.t-ruby" },
            "2": { "name": "entity.name.type.interface.t-ruby" }
          },
          "end": "^\\s*(end)\\b",
          "endCaptures": {
            "1": { "name": "keyword.control.end.t-ruby" }
          },
          "patterns": [
            { "include": "#interface-member" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "interface-member": {
      "patterns": [
        {
          "name": "meta.interface-member.t-ruby",
          "match": "^\\s*(\\w+)\\s*(:)\\s*(.+)$",
          "captures": {
            "1": { "name": "variable.other.member.t-ruby" },
            "2": { "name": "punctuation.separator.type.t-ruby" },
            "3": { "patterns": [{ "include": "#type-expression" }] }
          }
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "name": "meta.function.t-ruby",
          "begin": "^\\s*(def)\\s+(\\w+)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.function.t-ruby" },
            "2": { "name": "entity.name.function.t-ruby" }
          },
          "end": "\\)(?:\\s*(:)\\s*(.+))?",
          "endCaptures": {
            "1": { "name": "punctuation.separator.return-type.t-ruby" },
            "2": { "patterns": [{ "include": "#type-expression" }] }
          },
          "patterns": [
            { "include": "#parameter" }
          ]
        }
      ]
    },
    "parameter": {
      "patterns": [
        {
          "name": "meta.parameter.t-ruby",
          "match": "(\\w+)(?:\\s*(:)\\s*([^,)]+))?",
          "captures": {
            "1": { "name": "variable.parameter.t-ruby" },
            "2": { "name": "punctuation.separator.type.t-ruby" },
            "3": { "patterns": [{ "include": "#type-expression" }] }
          }
        }
      ]
    },
    "type-expression": {
      "patterns": [
        { "include": "#generic-type" },
        { "include": "#union-type" },
        { "include": "#intersection-type" },
        { "include": "#builtin-type" },
        { "include": "#custom-type" }
      ]
    },
    "builtin-type": {
      "patterns": [
        {
          "name": "support.type.builtin.t-ruby",
          "match": "\\b(String|Integer|Boolean|Array|Hash|Symbol|void|nil)\\b"
        }
      ]
    },
    "custom-type": {
      "patterns": [
        {
          "name": "entity.name.type.t-ruby",
          "match": "\\b[A-Z]\\w*\\b"
        }
      ]
    },
    "generic-type": {
      "patterns": [
        {
          "name": "meta.generic.t-ruby",
          "match": "([A-Z]\\w*)(<)([^>]+)(>)",
          "captures": {
            "1": { "name": "entity.name.type.t-ruby" },
            "2": { "name": "punctuation.definition.generic.begin.t-ruby" },
            "3": { "patterns": [{ "include": "#type-expression" }] },
            "4": { "name": "punctuation.definition.generic.end.t-ruby" }
          }
        }
      ]
    },
    "union-type": {
      "patterns": [
        {
          "name": "keyword.operator.type.union.t-ruby",
          "match": "\\|"
        }
      ]
    },
    "intersection-type": {
      "patterns": [
        {
          "name": "keyword.operator.type.intersection.t-ruby",
          "match": "&"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.t-ruby",
          "match": "\\b(if|elsif|else|unless|case|when|while|until|for|do|begin|rescue|ensure|raise|return|yield|break|next|redo|retry|end)\\b"
        },
        {
          "name": "keyword.declaration.t-ruby",
          "match": "\\b(def|class|module|type|interface)\\b"
        },
        {
          "name": "keyword.other.t-ruby",
          "match": "\\b(require|require_relative|include|extend|attr_reader|attr_writer|attr_accessor|private|protected|public)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.t-ruby",
          "match": "\\b(String|Integer|Float|Boolean|Array|Hash|Symbol|void|nil|true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.t-ruby",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.t-ruby",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.line.t-ruby",
              "begin": "#\\{",
              "end": "\\}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        },
        {
          "name": "string.quoted.single.t-ruby",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.t-ruby",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.t-ruby",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.t-ruby",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.other.symbol.t-ruby",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.instance.t-ruby",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.class.t-ruby",
          "match": "@@[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.global.t-ruby",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.constant.t-ruby",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.t-ruby",
          "match": "==|!=|<=|>=|<|>|<=>|===|=~|!~"
        },
        {
          "name": "keyword.operator.assignment.t-ruby",
          "match": "=|\\+=|-=|\\*=|/=|%=|\\*\\*=|&=|\\|=|\\^=|<<=|>>="
        },
        {
          "name": "keyword.operator.arithmetic.t-ruby",
          "match": "\\+|-|\\*|/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.logical.t-ruby",
          "match": "&&|\\|\\||!|and|or|not"
        }
      ]
    }
  }
}
